<h1>Product Details</h1>
<form method="post">
        <fieldset>
            <label for="name" class="col-2">Name: *</label>
            <input name="name" id="name" required value="{{product.name}}" />
        </fieldset>
        <fieldset>
            <label for="quantity" class="col-2">Quantity: *</label>
             <input name="quantity" id="quantity" required value="{{product.quantity}}" />       
        </fieldset>
         <fieldset>
            <label for="price" class="col-2">Price: *</label>
             <input name="price" id="price" required value="{{product.price}}" />       
        </fieldset>
        <button class="btn btn-primary offset-2">Save</button>
</form>